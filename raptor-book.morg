            track->len  = i;                // ➐
            rexp->ptr  += i + 1;            // ➑
            rexp->len  -= i + 1;            // ➒
            return TRUE;
          }
        }

        rexp->ptr += rexp->len;             // ➓
        rexp->len  = 0;                     // ⓫

        return TRUE;
      }
